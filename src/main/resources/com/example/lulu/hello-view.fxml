        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label alignment="CENTER" prefHeight="17.0" prefWidth="76.0" text="Login" textAlignment="CENTER" />
      <TextField fx:id="txtusuario" promptText="Digite seu nome de usuario" />
      <PasswordField fx:id="txtsenha" promptText="Digite sua senha" />
      <Button fx:id="btnentrar" mnemonicParsing="false" onMouseClicked="#efetuarlogin" text="Entrar" />
      <Label fx:id="lblresultado" prefHeight="17.0" prefWidth="394.0" text="" />
